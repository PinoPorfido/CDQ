<form id="formCalendario" method="post">
    <div asp-validation-summary="ModelOnly" class="help help-message"></div>
    <div class="columns">
        <div class="column is-fullwidth">
            <div class="panel" id="PannelloEdit" hidden="@Model.IsNascosto">
                <div class="panel-heading">
                    <div class="columns">
                        <div class="column is-7" align="left" style="font-size:small">
                            <p>Predisposizione del Calendario Operativo a partire dalla Pianificazione della Settimana Tipo: </p>
                        </div>
                        <div class="column is-1" align="center" style="font-size:small">
                            <a id="CreaSettimana" style="font-size:small" class="button is-dark" asp-action="CreaCalendario" asp-route-IDSettimana="@Model.IDSettimanaC" asp-route-Anno="@Model.Anno" onclick="return confirmCreation(this.id)">Crea Calendario</a>
                        </div>
                        <div class="column is-4" align="right">
                        </div>
                    </div>
                </div>

                <div class="panel-block">
                    <div class="container">

                        <div class="column">

                            <input id="IDCalendarioU" asp-for="IDCalendarioU" type="hidden">
                            <input id="IDCalendarioE" asp-for="IDCalendarioE" type="hidden">

                            @Html.HiddenFor(model => Model.ModeCalendario)

                            @Html.HiddenFor(model => Model.IDSettimana)

                            @Html.HiddenFor(model => Model.IDSettimanaC)

                            @Html.HiddenFor(model => Model.Anno)

                            @for (var i = 0; i < Model.ListaOrari.Count(); i++)
                            {
                                @Html.HiddenFor(model => Model.ListaOrari[i].Text)
                                @Html.HiddenFor(model => Model.ListaOrari[i].Value)
                            }

                            @for (var i = 0; i < Model.ListaGiorni.Count(); i++)
                            {
                                @Html.HiddenFor(model => Model.ListaGiorni[i].Text)
                                @Html.HiddenFor(model => Model.ListaGiorni[i].Value)
                            }

                            @for (var i = 0; i < Model.ListaRisorseAttivita.Count(); i++)
                            {
                                @Html.HiddenFor(model => Model.ListaRisorseAttivita[i].Text)
                                @Html.HiddenFor(model => Model.ListaRisorseAttivita[i].Value)
                            }

                            @for (var i = 0; i < Model.ListaRisorseAttivitaR.Count(); i++)
                            {
                                @Html.HiddenFor(model => Model.ListaRisorseAttivitaR[i].Text)
                                @Html.HiddenFor(model => Model.ListaRisorseAttivitaR[i].Value)
                            }

                            @for (var i = 0; i < Model.ListaRisorseAttivitaCapienza.Count(); i++)
                            {
                                @Html.HiddenFor(model => Model.ListaRisorseAttivitaCapienza[i].Text)
                                @Html.HiddenFor(model => Model.ListaRisorseAttivitaCapienza[i].Value)
                            }

                            <div class="field" hidden>
                                <select hidden id="select_RisorsaAttivitaCapienza" asp-items="Model.ListaRisorseAttivitaCapienza"></select>
                                <button hidden id="BookingDel" class="button is-dark" type="submit" asp-action="EliminaPrenotazione">Elimina</button>
                            </div>

                            <div class="columns">
                                <div class="column is-2" style="font-size:small">
                                    <div class="field">
                                        <label asp-for="Calendario.RisorsaAttivita" class="label">Risorsa-Attività</label>
                                        <div class="select is-fullwidth">
                                            <select id="select_RisorsaAttivita" asp-for="IDRisorsaAttivita" asp-items="Model.ListaRisorseAttivita" onchange="GetCapienza()">
                                                <option hidden disabled selected>Selezionare la Risorsa-Attività</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="column is-1" style="font-size:small">
                                    <label asp-for="Calendario.Capienza" class="label">Capienza</label>
                                    <input id="Capienza" asp-for="Calendario.Capienza" class="input" style="font-size:small" />
                                </div>
                                <div class="column is-2" style="font-size:small">
                                    <div class="field">
                                        <label asp-for="Calendario.Data" class="label">Giorno</label>
                                        <div class="select is-fullwidth">
                                            <select id="select_Giorno" asp-for="IDGiorno" asp-items="Model.ListaGiorni">
                                                <option hidden disabled selected>Giorno</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="column is-2" style="font-size:small">
                                    <div class="field">
                                        <label asp-for="Calendario.OraInizio" class="label">Orario Inizio Attività</label>
                                        <div class="select">
                                            <select id="select_OraInizio" asp-for="IDOraInizio" asp-items="Model.ListaOrari">
                                                <option hidden disabled selected>Selezionare l'orario</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="column is-2" style="font-size:small">
                                    <div class="field">
                                        <label asp-for="Calendario.OraFine" class="label">Orario Fine Attività</label>
                                        <div class="select">
                                            <select id="select_OraFine" asp-for="IDOraFine" asp-items="Model.ListaOrari">
                                                <option hidden disabled selected>Selezionare l'orario</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="column is-1" align="right">
                                    <label class="label" style="font-size:small">&nbsp;</label>
                                    <button id="CalIns" style="font-size:small" class="button is-dark" type="submit" data-tooltip="Aggiunge elemento al Calendario Operativo">Inserisci</button>
                                </div>
                                <div class="column is-1" align="right">
                                    <label class="label" style="font-size:small">&nbsp;</label>
                                    <button id="CalUpd" class="button is-dark" style="font-size:small" type="submit" data-tooltip="Modifica elemento al Calendario Operativo" disabled='@Model.ModeCalendario == "Ins" ? true : false'>Aggiorna</button>
                                </div>
                                <div class="column is-1" align="right">
                                    <label class="label" style="font-size:small">&nbsp;</label>
                                    <button id="CalDel" class="button is-dark" style="font-size:small" type="submit" data-tooltip="Elimina elemento al Calendario Operativo" disabled='@Model.ModeCalendario == "Ins" ? true : false' asp-action="EliminaCalendario" onclick="return confirmElimina(this.id)" title="elimina Pianificazione">Elimina</button>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


