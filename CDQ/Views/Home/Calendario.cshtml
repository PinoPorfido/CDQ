<br />
<br />

<div class="columns">
    <div class="column is-2" align="left">
        <a asp-action="Index" class="button back">
            <span class="icon">
                <i class="fas fa-backward"></i>
            </span>
        </a>
    </div>
    <div class="column is-8" align="center">
        <h1 class="title is-4">Calendario Operativo - @Model.Esercente</h1>
