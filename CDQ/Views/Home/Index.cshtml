@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Home Page";
}

<br />

<body>

    <div class="columns" id="site_content">
        <div class="column is-3">
            <div class="panel">
                <div class="panel-heading">
                    <!-- insert your sidebar items here -->
                    <h3 class="title is-4">Ultime Notizie</h3>
                </div>
                <div class="panel-block">
                    <div class="container">
                        <h5><strong>Maggio 2020</strong></h5>
                        <p>Lancio della piattaforma per la Gestione della Composizione della Crisi con l'approvazione della Camera di Commercio di Cosenza e l'adozione formale da parte dell'Ordine degli Avvocati di Milano.<br /><a href="#">Leggi il contributo completo</a></p>
                    </div>
                </div>
            </div>
            <div class="panel">
                <div class="panel-heading">
                    <!-- insert your sidebar items here -->
                    <h3 class="title is-4">Link Utili</h3>
                </div>
                <div class="panel-block">
                    <div class="container">
                        <ul>
                            <li><a href="#">link 1</a></li>
                            <li><a href="#">link 2</a></li>
                            <li><a href="#">link 3</a></li>
                            <li><a href="#">link 4</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="column is-9">
            <div class="panel">
                <div class="panel-heading">
                    <h3 class="title is-3">Sistema pronto all'utilizzo</h3>
                </div>
                <div class="column" id="content">
                    <!-- insert the page content here -->
                    <h3 class="title is-4">Login effettuato da @(HttpContextAccessor.HttpContext.Session.GetString("nominativo"))</h3>
                    <p>Ultimo login effettuato il  @(HttpContextAccessor.HttpContext.Session.GetString("lastlogin"))</p>
                    <p>Sei pronto ad utilizzare le funzioni richiamabili nei menu in alto.</p>
                    <p>Il nostro <strong>supporto clienti</strong> è a tua disposizione secondo il piano sottoscritto e consultabile nel tuo profilo.</p>
                </div>
            </div>
            <div class="panel">
                <p align="center" style="color:brown" >nessuna attività programmata sui server per le prossime 24 ore</p>
            </div>
            <div class="panel">
